{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext", "es2022"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"],
            "src/*": ["./src/*"],
            "scripts/*": ["./scripts/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "src/**/*", "pages/**/*", "scripts/**/*", ".next/types/**/*.ts"],
    "exclude": ["node_modules", "next.config.js"]
}
