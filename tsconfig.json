{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    //    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "scripts/*": [
        "./scripts/*"
      ],
      "pages/*": [
        "./pages/*"
      ]
    },
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "scripts/**/*",
    "pages/**/*"
  ],
  "exclude": [
    "node_modules",
    "next.config.js"
  ]
}
